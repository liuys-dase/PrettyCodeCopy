{
  "name": "PrettyCodeCopy",
  "displayName": "PrettyCodeCopy",
  "publisher": "liuyushi",
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/liuys-dase/PrettyCodeCopy.git"
  },
  "description": "",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.76.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Pretty Code Copy",
      "properties": {
        "PrettyCodeCopy.filePathHeaders": {
          "type": "array",
          "description": "Header fields related to file path/info to include above the copied code block.",
          "items": {
            "type": "string",
            "enum": [
              "source",
              "lines",
              "language",
              "workspace",
              "file",
              "path",
              "time",
              "repoLink",
              "gitBranch",
              "gitShortSha",
              "gitLastCommitTime"
            ],
            "markdownEnumDescriptions": [
              "Path of the file relative to the workspace root (e.g., `src/main.ts`).",
              "Selected line range as `start-end` (e.g., `5-18`).",
              "Detected language identifier used for fenced code blocks (e.g., `typescript`).",
              "Current VS Code workspace name.",
              "File name only (e.g., `main.ts`).",
              "Absolute filesystem path to the file.",
              "ISO 8601 timestamp when the copy was made.",
              "Repository permalink to this file at the current commit with line anchors when available.",
              "Current Git branch name.",
              "Short SHA of `HEAD` (e.g., `a1b2c3d`).",
              "Commit time of `HEAD` in ISO 8601 format."
            ]
          },
          "uniqueItems": true,
          "default": [
            "source",
            "lines"
          ]
        },
        "PrettyCodeCopy.plainText": {
          "type": "boolean",
          "description": "Output plain text without Markdown formatting or fenced code block.",
          "default": false
        },
        "PrettyCodeCopy.codeStructureHeaders": {
          "type": "array",
          "description": "Header fields related to code structure (e.g., symbols, signatures).",
          "items": {
            "type": "string"
          },
          "uniqueItems": true,
          "default": []
        }
      }
    },
    "commands": [
      {
        "command": "PrettyCodeCopy.copy",
        "title": "Copy Code With File Path and Line Numbers"
      }
    ],
    "keybindings": [
      {
        "command": "PrettyCodeCopy.copy",
        "key": "cmd+alt+c",
        "win": "ctrl+shift+alt+c",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.76.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3"
  },
  "dependencies": {
    "vsce": "^2.15.0"
  }
}
